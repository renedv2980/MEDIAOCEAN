                    D_AXG$XCHR:AXG$XCHR,                                        
                    D_AXG$NETA:AXG$NETA,                                        
                    D_AXG$TAXA_HST:AXG$TAXA_HST,                                
                    D_AXG$TAXC:AXG$TAXC,                                        
                    D_AXG$MEDT:AXG$MEDT,                                        
                    D_AXG$SMED:AXG$SMED,                                        
                    D_AXG$MATL:AXG$MATL,                                        
                    D_AXG$INS#:AXG$INS#,                                        
                    D_AXG$TAXM_HST:AXG$TAXM_HST,                                
                    D_AXG$KEY:AXG$KEY,                                          
