                    D_AXG$TAXM_GST:AXG$TAXM_GST,                                
                    D_AXG$TAXA_QST:AXG$TAXA_QST,                                
                    D_AXG$TAXM_QST:AXG$TAXM_QST,                                
                    D_SUP_SAPRCUST:A_SUP_SAPRCUST,                              
                    D_SUP_SAPRCOMP:A_SUP_SAPRCOMP,                              
                    D_SUP_SAPRSORG:A_SUP_SAPRSORG,                              
