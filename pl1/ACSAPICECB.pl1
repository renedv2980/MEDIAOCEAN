* This collapses F2 *after* the sort (where the sort key is defined             
* by the F2 JOINKEYS fields above), retaining only the first duplicate.         
* The gross $ (i.e., the SUM) winds up in the totalled record.                  
*                                                                               
 SUM FIELDS=(D_AXG$NETA)                                                        
                                                                                
                                                                                
./ ADD NAME=COPECNTL                                                            
*                                                                               
* Generate the exception file. This done by formatting the output               
* records to contain nothing but the original pipe-delimited records.           
* We must also throw away duplicates, because a given ACC transaction           
* record may have generated more than one exception.                            
*                                                                               
 JOINKEYS F1=EXCEPTN,                                                           
             TASKID=TE,          <<<< SEE TEF1CNTL                              
             FIELDS=(A_ACC_SEQNUM,A)                                            
 JOINKEYS F2=ACCSAVE,                                                           
             SORTED,                                                            
             FIELDS=(O_ACC_SEQNUM,A)                                            
 REFORMAT FIELDS=(F2:1,4,                                                       
                     O_ORIGINAL_REC_VL) ** Original pipe-delimited rec.         
                                                                                
                                                                                
./ ADD NAME=TEF1CNTL                                                            
*                                                                               
* Throw away duplicate exception records.                                       
*                                                                               
 SUM FIELDS=(NONE)                                                              
                                                                                
                                                                                
./ ADD NAME=JONVCNTL                                                            
*                                                                               
* Join the support dataset with the vendor billing dataset.                     
*                                                                               
 JOINKEYS F1=SUPPSORT,                                                          
             FIELDS=(SAPKSYS,A,                                                 
                     SAPKMED,A,                                                 
                     SAPKVJN,A),                                                
             SORTED,                                                            
             INCLUDE=(SAPKTYPE,EQ,SAPKTYPE_VNDR)                                
 JOINKEYS F2=VENDORS,                                                           
             FIELDS=(SAMBKSYS,A,                                                
                     SAMBKMED,A,                                                
                     SAMBVJN,A)                                                 
 JOIN UNPAIRED,F2  *** keep *both* matched and unmatched vendor details         
 REFORMAT FIELDS=(F2:SAMBREC)            ** from vendor file                    
*                                                                               
 OUTREC OVERLAY=(V_SAMBDOLS:SAMBDOLS,TO=ZD)                                     
                                                                                
                                                                                
./ ADD NAME=JONTCNTL                                                            
*                                                                               
* Join the vendor details together with the ACC transactions.                   
*                                                                               
 JOINKEYS F1=VENDOR$,                                                           
             FIELDS=(SAMBKSYS,A,                                                
                     SAMBKMED,A,                                                
                     SAMBKCLT,A,                                                
                     SAMBKPRD,A,                                                
                     SAMBKEST,A,                                                
                     SAMBKINV,A,                                                
                     SAMBMOS,A)                                                 
 JOINKEYS F2=JOINVEND,                                                          
             FIELDS=(D_AXG$SYS,A,                                               
                     D_AXG$MED,A,                                               
                     D_AXG$CLT,A,                                               
                     D_AXG$PRD,A,                                               
                     D_AXG$EST,A,                                               
                     D_AXG$SINV,A,                                              
                     D_AXG$MOS,A)                                               
 JOIN UNPAIRED,F2    *** keep *both* matched and unmatched transactions         
 REFORMAT FIELDS=(?,                   ** JOIN result indicator                 
                  F2:D_GROSS$,         ** computed earlier                      
                  F1:SAMBVNDR,         ** from vendor file                      
                     V_SAMBDOLS,       ** from vendor file                      
                  F2:D_JOINED_DATA)    ** all other data                        
*                                                                               
* Build our work record from the reformatted fields.                            
 INREC BUILD=(D_JOIN_RESULT:REFT_JOIN_RESULT_INDICATOR,                         
              D_GROSS$:REFT_D_GROSS$,                                           
              D_NETWORK:REFT_SAMBVNDR,                                          
              D_SAMBDOLS:REFT_V_SAMBDOLS,                                       
              D_JOINED_DATA:REFT_D_JOINED_DATA)                                 
*                                                                               
*&!LOAD                                                                         
 OUTFIL FNAMES=JOINVEN2,                                                        
        IFTHEN=(WHEN=(D_JOIN_RESULT,EQ,F2_ONLY),                                
                   OVERLAY=(D_NETWORK:C'NETWORK',                               
                            D_SAMBDOLS:D_AXG$NETA_ZL11,                         
                                       SUB,D_AXG$TAXA_ZL11_HST,                 
                                       SUB,D_AXG$TAXA_ZL11_GST,                 
                                       SUB,D_AXG$TAXA_ZL11_QST,                 
                                       SUB,D_AXG$BINC_ZL11,                     
                                       TO=ZD,LENGTH=LEN_D_SAMBDOLS))            
*&!                                                                             
*&&LOAD                                                                         
 OUTFIL FNAMES=FATALERR,           *** only problematic records go here         
   INCLUDE=(D_JOIN_RESULT,EQ,F2_ONLY)              *** missing record           
*                                                                               
 OUTFIL FNAMES=JOINVEN2,                                                        
   SAVE                            *** (everything else)                        
*&&                                                                             
                                                                                
                                                                                
./ ADD NAME=SRT1CNTL                                                            
*                                                                               
* Produce a file of commission addendum records per invoice.                    
* Note: because the XML file will be sorted by SAP vendor code within           
* an invoice, we force hex values into that field for these addendum            
* records, so that they will sort after the true vendor details.                
*                                                                               
 SORT FIELDS=(D_AXG$MSYS_AGY,A,                                                 
              D_AXG$SYS,A,                                                      
              D_AXG$MED,A,                                                      
              D_AXG$CLT,A,                                                      
              D_AXG$PRD,A,                                                      
              D_AXG$EST,A,                                                      
              D_AXG$INV,A,                                                      
              D_AXG$MOS,A),EQUALS          * (makes debugging easier!)          
*                                                                               
 SUM FIELDS=(NONE)                                                              
*                                                                               
 OUTFIL BUILD=(D_GROSS$:D_GROSS$,                                               
               D_SORT_SEQUENCE:C'0',       ** commission                        
               D_JOINED_DATA:D_JOINED_DATA)                                     
                                                                                
                                                                                
./ ADD NAME=SRT2CNTL                                                            
*                                                                               
* Produce a file of tax addendum records per invoice.                           
* Note: because the XML file will be sorted by SAP vendor code within           
* an invoice, we force hex values into that field for these addendum            
* records, so that they will sort after the true vendor details.                
*                                                                               
* Ignore transactions without any kind of tax at all.                           
 INCLUDE COND=(D_AXG$TAXA_HST,NE,0,OR,                                          
               D_AXG$TAXA_GST,NE,0,OR,                                          
               D_AXG$TAXA_QST,NE,0)                                             
*                                                                               
 SORT FIELDS=(D_AXG$MSYS_AGY,A,                                                 
              D_AXG$SYS,A,                                                      
              D_AXG$MED,A,                                                      
              D_AXG$CLT,A,                                                      
              D_AXG$PRD,A,                                                      
              D_AXG$EST,A,                                                      
              D_AXG$INV,A,                                                      
              D_AXG$MOS,A),EQUALS          * (makes debugging easier!)          
*                                                                               
 SUM FIELDS=(NONE)                                                              
*                                                                               
* Force addendum records to sort after the true detail line items.              
 OUTFIL BUILD=(D_GROSS$:D_GROSS$,                                               
               D_SORT_SEQUENCE:C'1',                                            
               D_JOINED_DATA:D_JOINED_DATA,                                     
               /,                                                               
               D_GROSS$:D_GROSS$,                                               
               D_SORT_SEQUENCE:C'2',                                            
               D_JOINED_DATA:D_JOINED_DATA,                                     
               /,                                                               
               D_GROSS$:D_GROSS$,                                               
               D_SORT_SEQUENCE:C'3',                                            
               D_JOINED_DATA:D_JOINED_DATA)                                     
                                                                                
                                                                                
./ ADD NAME=SRTVCNTL                                                            
*                                                                               
* Produce a file of variance addendum records per invoice.                      
* To calculate the variance, we use the "SUM" operator to calculate             
* vendor billing totals by invoice/MOS. That total, plus any commission         
* and/or tax amounts, is subtracted from the ACC extract net bill               
* amount, yielding the variance.                                                
* Note: because the XML file will be sorted by SAP vendor code within           
* an invoice, we force hex values into that field for these addendum            
* records, so that they will sort after the true vendor details.                
*                                                                               
 SORT FIELDS=(D_AXG$MSYS_AGY,A,                                                 
              D_AXG$SYS,A,                                                      
              D_AXG$MED,A,                                                      
              D_AXG$CLT,A,                                                      
              D_AXG$PRD,A,                                                      
              D_AXG$EST,A,                                                      
              D_AXG$INV,A,                                                      
              D_AXG$MOS,A),EQUALS          * (makes debugging easier!)          
*                                                                               
 SUM FIELDS=(D_SAMBDOLS)                                                        
*                                                                               
 OUTFIL BUILD=(D_VARIANCE:D_AXG$NETA,SUB,                                       
                          (D_SAMBDOLS,ADD,                                      
                           D_AXG$BINC,ADD,                                      
                           D_AXG$TAXA_HST,ADD,                                  
                           D_AXG$TAXA_GST,ADD,                                  
                           D_AXG$TAXA_QST),                                     
                          TO=ZD,LENGTH=LEN_D_VARIANCE,                          
               D_GROSS$:D_GROSS$,                                               
               D_SORT_SEQUENCE:C'4',                    ** variance             
               D_JOINED_DATA:D_JOINED_DATA)                                     
                                                                                
                                                                                
./ ADD NAME=SRTICNTL                                                            
*                                                                               
* Sort the detail records into the sequence that we want them to appear         
* in the XML file, and fill in all other available (and relevant) data          
* fields. Discard any record with a zero amount in its relevant amount          
* field. Assign the Item_Number value to each remaining detail line.            
* The Item_Number is restarted at value 1 at the start of each Invoice          
* (System, Media, Client, Product, Estimate, Invoice#).                         
*                                                                               
 INREC IFTHEN=(WHEN=INIT,OVERLAY=(D_AXG$STYP:C'INV')),                          
       IFTHEN=(WHEN=(D_GROSS$,LT,0),OVERLAY=(D_AXG$STYP:C'CRM'))                
*                                                                               
 SORT FIELDS=(D_AXG$MSYS_AGY,A,                                                 
              D_AXG$SYS,A,                                                      
              D_AXG$MED,A,                                                      
              D_AXG$CLT,A,                                                      
              D_AXG$PRD,A,                                                      
              D_AXG$EST,A,                                                      
              D_AXG$INV,A,                                                      
              D_AXG$MOS,A,                                                      
              D_SORT_SEQUENCE,A),                                               
      EQUALS                               * (makes debugging easier!)          
*                                                                               
 OUTREC IFTHEN=(WHEN=INIT,                 *** initialization                   
         OVERLAY=(X_AXG$CLT:D_AXG$CLT,          *** FROM AXG$PRD                
                  X_AXG$PRD:D_AXG$PRD,          *** FROM AXG$PRD                
                  X_MATERIAL:D_AXG$MATL)),                                      
                                                                                
*                                          COMMISSION                           
        IFTHEN=(WHEN=(D_SORT_SEQUENCE,EQ,C'0'),                                 
         OVERLAY=(X_NET_AMOUNT:D_AXG$BINC,MUL,-1,                               
                   EDIT=(SIIIIIIIIIIIT.TT),SIGNS=(,-),                          
                  D_AXG$INS#:C'COM',                                            
                  X_MATERIAL:C'M00021        '),HIT=NEXT),                      
                                                                                
*                                          TAX                                  
        IFTHEN=(WHEN=(D_SORT_SEQUENCE,EQ,C'1'),                                 
         OVERLAY=(X_NET_AMOUNT:D_AXG$TAXA_HST,MUL,-1,                           
                   EDIT=(SIIIIIIIIIIIT.TT),SIGNS=(,-),                          
                  D_AXG$INS#:C'TAX',                                            
                  X_MATERIAL:D_AXG$TAXM_HST),HIT=NEXT),                         
*                                                                               
        IFTHEN=(WHEN=(D_SORT_SEQUENCE,EQ,C'2'),                                 
         OVERLAY=(X_NET_AMOUNT:D_AXG$TAXA_GST,MUL,-1,                           
                   EDIT=(SIIIIIIIIIIIT.TT),SIGNS=(,-),                          
                  D_AXG$INS#:C'TAX',                                            
                  X_MATERIAL:D_AXG$TAXM_GST),HIT=NEXT),                         
*                                                                               
        IFTHEN=(WHEN=(D_SORT_SEQUENCE,EQ,C'3'),                                 
         OVERLAY=(X_NET_AMOUNT:D_AXG$TAXA_QST,MUL,-1,                           
                   EDIT=(SIIIIIIIIIIIT.TT),SIGNS=(,-),                          
                  D_AXG$INS#:C'TAX',                                            
                  X_MATERIAL:D_AXG$TAXM_QST),HIT=NEXT),                         
                                                                                
*                                          VARIANCE                             
        IFTHEN=(WHEN=(D_SORT_SEQUENCE,EQ,C'4'),                                 
         OVERLAY=(X_NET_AMOUNT:D_VARIANCE,MUL,-1,                               
                   EDIT=(SIIIIIIIIIIIT.TT),SIGNS=(,-),                          
                  D_AXG$INS#:C'VAR',                                            
                  X_MATERIAL:C'M00025        '),HIT=NEXT),                      
*                                                                               
        IFTHEN=(WHEN=ANY,              *** all COM, TAX, VAR records            
         OVERLAY=(D_NETWORK:C'STATION     ')),                                  
*                                                                               
        IFTHEN=(WHEN=NONE,             *** all *other* records                  
         OVERLAY=(X_NET_AMOUNT:D_SAMBDOLS,MUL,-1,                               
                   EDIT=(SIIIIIIIIIIIT.TT),SIGNS=(,-)))                         
*                                                                               
 OUTFIL OMIT=((D_AXG$INS#,EQ,C'COM',AND,D_AXG$BINC,EQ,0),OR,                    
              (D_AXG$INS#,EQ,C'TAX',AND,D_AXG$TAXA_HST,EQ,0,AND,                
               X_MATERIAL,EQ,D_AXG$TAXM_HST),OR,                                
              (D_AXG$INS#,EQ,C'TAX',AND,D_AXG$TAXA_GST,EQ,0,AND,                
               X_MATERIAL,EQ,D_AXG$TAXM_GST),OR,                                
              (D_AXG$INS#,EQ,C'TAX',AND,D_AXG$TAXA_QST,EQ,0,AND,                
               X_MATERIAL,EQ,D_AXG$TAXM_QST),OR,                                
              (D_AXG$INS#,EQ,C'VAR',AND,D_VARIANCE,EQ,0),OR,                    
              (D_AXG$INS#,NE,C'COM',AND,                                        
               D_AXG$INS#,NE,C'TAX',AND,                                        
               D_AXG$INS#,NE,C'VAR',AND,                                        
               D_SAMBDOLS,EQ,0)),                                               
        OVERLAY=(D_ITEM_NUMBER:SEQNUM,LEN_D_ITEM_NUMBER,ZD,                     
                   RESTART=(D_ITEM_#_KEY),                                      
                 D_GROSS$:D_GROSS$,EDIT=(SIIIIIIIIIT.TT),SIGNS=(,-))            
                                                                                
                                                                                
