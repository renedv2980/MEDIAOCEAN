 SECTIONS=(D_AXG$SYS,                                                           
           D_AXG$MED,                                                           
           D_AXG$CLT,                                                           
           D_AXG$PRD,                                                           
           D_AXG$EST,                                                           
           D_AXG$INV,                                                           
       HEADER3=(03:'<InvoiceHeader>',/,                                         
                05:X_MEDIA_SYSTEM,/,                                            
                05:X_VOUCHER_NO,/,                                              
                05:X_CUSTOMER,/,                                                
                05:X_INVOICE_NO,/,                                              
                05:X_COMPANY_CODE,/,                                            
                05:X_GROSS_AMOUNT,/,                                            
                05:'<Gross_Amount_Local/>',/,                                   
                05:X_CURRENCY,/,                                                
                05:X_EXCHANGE_RATE,/,                                           
                05:X_INVOICE_DATE,/,                                            
                05:X_DUE_DATE,/,                                                
                05:X_TRANS_TYPE,/,                                              
                05:X_MEDIA_CLT,/,                                               
